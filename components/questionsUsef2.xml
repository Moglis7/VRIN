<krpano>

    <scene name="scene_U2_init" title="Usef2"   onstart="" thumburl="" lat="" lng="" heading="">
        <plugin name="video"
            url.html5="../plugins/videoplayer.js"
            url.flash="../plugins/videoplayer.swf"
            videourl="../usef2/problem.webm"
            panovideo="true"
            pausedonstart="false"
            loop="false"
            volume="1.0"
            onvideocomplete="tween(alpha,0,0.2,default,WAIT); loadscene(scene_U2,null,MERGE|KEEPMOVING,OPENBLEND(0.8, -1.0, 0.3, 0.0, linear));"
        />

        <image hfov="360"  vfov="180">            
            <sphere url="plugin:video" />
        </image>

    </scene>
  
  <scene  name="scene_U2" title="1"   onstart="" thumburl="" lat="" lng="" heading="" >
          <plugin name="video"
            url.html5="../plugins/videoplayer.js"
            url.flash="../plugins/videoplayer.swf"
            videourl="../usef2/usef2_idle.webm"
            panovideo="true"
            pausedonstart="false"
            loop="true"
            volume="1.0"
        />
        
        <image hfov="360"  vfov="180">            
            <sphere url="plugin:video" />
        </image>

        <hotspot name="doctor_1" style="button" oy="-500" ox="-900" ry="-10" tz="2000" scale="2.2"
            distorted="true"				 			
            width="300"		
            html="Sir you need to take up language courses as we mentioned in the briefing."
            onover="tween(scale,2.8,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(usef2_1, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.3, 0.0, linear));"
        />

        <hotspot name="doctor_2" style="button" oy="-300" ox="-900" ry="-10" tz="2000" scale="2.2"
            distorted="true"       
            width="300"	       
            html="Inform the school you don't speak the language."				
            onover="tween(scale,2.8,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(usef2_2, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.3, 0.0, linear));"
        />

        <hotspot name="doctor_3" style="button" oy="50" ox="-900" ry="-10" tz="2000" scale="2.2"
            distorted="true"
            width="300"		         
            html="This time I will accompany you, but I want you to understand how important it is to learn the language of the country you live in. If you learn it well you can be autonomous and support your family. Let's apply now for a free language course, shall we?"				
            onover="tween(scale,2.8,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(usef2_3, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.3, 0.0, linear));"
        />
