            url.html5="../plugins/videoplayer.js"
            url.flash="../plugins/videoplayer.swf"
            videourl="../clips/c_Actor.mp4"
            panovideo="true"
            pausedonstart="false"
            loop="false"
            volume="1.0"
            onvideocomplete="tween(alpha,0,0.2,default,WAIT); loadscene(scene_c,null,MERGE|KEEPMOVING,OPENBLEND(0.8, -1.0, 0.3, 0.0, easeinquad));"
        />

        <image hfov="360"  vfov="180">            
            <sphere url="plugin:video" />
        </image>

    </scene>
  
  <scene  name="scene_c" title="1"   onstart="" thumburl="" lat="" lng="" heading="" >
          <plugin name="video"
            url.html5="../plugins/videoplayer.js"
            url.flash="../plugins/videoplayer.swf"
            videourl="../clips/idle_2.mp4"
            panovideo="true"
            pausedonstart="false"
            loop="true"
            volume="1.0"
        />
        
        <image hfov="360"  vfov="180">            
            <sphere url="plugin:video" />
        </image>

        <hotspot name="h_1" style="button" oy="-600" ox="800" ry="10" tz="2000" scale="2.2"
            distorted="true"				 			
            width="500"		
            html="“Use simple words. Sometimes it’s just a language barrier.”"
            onover="tween(scale,2.5,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(user_C1, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.6, 0.0, easeinquad));"
        />

        <hotspot name="h_2" style="button" oy="-360" ox="800" ry="10" tz="2000" scale="2.2"
            distorted="true"       
            width="500"	       
            html="“Avoid legal terms. It might confuse or scare them.”"				
            onover="tween(scale,2.5,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(user_C2, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.6, 0.0, easeinquad));"
        />

        <hotspot name="h_3" style="button" oy="-120" ox="800" ry="10" tz="2000" scale="2.2"
            distorted="true"
            width="500"		         
            html="“Tell them they should work with their husbands on gender equality issues.”"				
            onover="tween(scale,2.5,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(user_C3, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.6, 0.0, easeinquad));"
        />


        <hotspot name="h_4" style="button" oy="200" ox="800" ry="10" tz="2000" scale="2.2"
            distorted="true"
            width="500"		         
            html="“Try to empower them, tell them to come in for an appointment with their husbands. They might be more open if you are also part of the equation.”"	
            onover="tween(scale,2.5,easeOutExpo,0.2);"
            onout="tween(scale,2.2,easeOutExpo,0.2);"
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(user_C4, null,MERGE|KEEPMOVING,OPENBLEND(1.0, -1.0, 0.6, 0.0, easeinquad));"
        />


