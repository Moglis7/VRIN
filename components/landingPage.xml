<krpano>    
    <!--WebVR-->
	<include url="%VIEWER%/plugins/webvr.xml" />
	<plugin name="webvr" postracking="true"  />

    <view hlookat="0" vlookat="0" fovtype="MFOV" fov="110" fovmin="80" fovmax="110" limitview="auto"/>

    <scene name="scene_landing" title="landing" lat="" lng="" heading="" onstart="checkAspectRatioAndLoadScene();">
     <hotspot
            name="intro"
            type="image"
            distorted="true"
            tz="1000"
            ty="-500"   
            url="%VIEWER%/ui/vrExp.png"
            align='center'
            width="1808"
            height="341"            
            y="-10%"
            alphachannel="auto"
		/>

        <hotspot            
            name="button_1"
            style="start_button2"
            align='center'
            distorted="true"
            tz="1000"
            ty="500"   
            width="300"
            html="Confirm" 
            onclick="tween(alpha,0,0.2,default,WAIT); loadscene(scene_starting,null,MERGE|KEEPMOVING,OPENBLEND(0.5, 0.0, 0.6, 0.0, easeinquad));"
            zorder="2"
            onover="tween(scale,1.1,easeOutExpo,0.2, set(hotspot[buttonImage_1].scale, 1.05));  "
            onout="tween(scale,1,easeOutExpo,0.2, set(hotspot[buttonImage_1].scale, 1));  "
        />	
    </scene>

    <scene name="scene_starting" title="landing" lat="" lng="" heading="">
        <hotspot
            name="intro"
            type="image"
            distorted="true"
            tz="1000"
            ty="-500"   
            url="%VIEWER%/ui/introduction.png"
            align='center'
            width="calc:1272 *1.5"
            height="calc:241 * 1.5"
            y="-10%"
            alphachannel="auto"
		/>


        <hotspot            
            name="button_1"
            style="start_button2"
            align='center'
            distorted="true"
            tz="1000"
            ty="500"   
            width="300"
            html="Start" 
            onclick=" tween(alpha,0,0.2,default,WAIT); loadscene(scene_a_actor,null,MERGE|KEEPMOVING,OPENBLEND(0.5, 0.0, 0.6, 0.0, easeinquad));"
            zorder="2"
            onover="tween(scale,1.1,easeOutExpo,0.2, set(hotspot[buttonImage_1].scale, 1.05));  "
            onout="tween(scale,1,easeOutExpo,0.2, set(hotspot[buttonImage_1].scale, 1)); "
        />			
	</scene>
</krpano>

    

